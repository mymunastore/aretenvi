# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these values from your Supabase project settings
# Project Settings -> API -> Project URL and anon/public key
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# AI PROVIDER API KEYS
# ============================================
# OpenAI API Key (Required for AI features)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (Optional - for Claude models)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google AI API Key (Optional - for Gemini models)
# Get your API key from https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=

# ============================================
# AI FEATURE CONFIGURATION
# ============================================
# Enable/disable specific AI features
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_SEMANTIC_SEARCH=true
VITE_ENABLE_IMAGE_ANALYSIS=true
VITE_ENABLE_SENTIMENT_ANALYSIS=true
VITE_ENABLE_CONTENT_MODERATION=true

# Default AI model preferences
VITE_DEFAULT_CHAT_MODEL=gpt-4o-mini
VITE_DEFAULT_EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# RATE LIMITING & QUOTAS
# ============================================
# Configure rate limits for AI features
VITE_RATE_LIMIT_ENABLED=true
VITE_DEFAULT_USER_TIER=free

# Free tier limits
VITE_FREE_TIER_DAILY_REQUESTS=50
VITE_FREE_TIER_MONTHLY_TOKENS=100000

# Premium tier limits
VITE_PREMIUM_TIER_DAILY_REQUESTS=2000
VITE_PREMIUM_TIER_MONTHLY_TOKENS=5000000

# ============================================
# STORAGE CONFIGURATION
# ============================================
# Maximum file upload sizes (in MB)
VITE_MAX_IMAGE_SIZE_MB=10
VITE_MAX_DOCUMENT_SIZE_MB=20
VITE_MAX_AVATAR_SIZE_MB=2

# Allowed file types
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
VITE_ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword

# ============================================
# ERROR TRACKING & MONITORING
# ============================================
# Sentry Error Tracking (Optional)
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN=

# Enable performance monitoring
VITE_SENTRY_TRACES_SAMPLE_RATE=0.1

# ============================================
# ANALYTICS & TRACKING
# ============================================
# Google Analytics (Optional)
VITE_GA_MEASUREMENT_ID=

# Mixpanel (Optional)
VITE_MIXPANEL_TOKEN=

# ============================================
# EXTERNAL INTEGRATIONS
# ============================================
# Google Maps API (Optional)
VITE_GOOGLE_MAPS_API_KEY=

# WhatsApp Business API
WHATSAPP_BUSINESS_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCESS_TOKEN=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=

# Payment Gateway (Stripe/Paystack)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=

# ============================================
# APPLICATION SETTINGS
# ============================================
# App Version (for release tracking)
VITE_APP_VERSION=0.1.0

# Environment
NODE_ENV=development

# API Base URL
VITE_API_BASE_URL=http://localhost:5173

# ============================================
# SECURITY SETTINGS
# ============================================
# JWT Secret (for additional security layers)
JWT_SECRET=your-jwt-secret-here

# Content Security Policy
VITE_CSP_ENABLED=true

# CORS Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# ============================================
# FEATURE FLAGS
# ============================================
# Enable experimental features
VITE_ENABLE_BETA_FEATURES=false
VITE_ENABLE_DEBUG_MODE=false

# ============================================
# CACHING & PERFORMANCE
# ============================================
# Enable semantic cache for AI responses
VITE_ENABLE_AI_CACHE=true
VITE_CACHE_TTL_SECONDS=604800

# CDN Configuration
VITE_CDN_URL=

# ============================================
# NOTIFICATIONS
# ============================================
# Email Service (SendGrid/Mailgun)
EMAIL_SERVICE_API_KEY=
EMAIL_FROM_ADDRESS=noreply@yourdomain.com
EMAIL_FROM_NAME=ARET Environmental Services

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Push Notifications (Firebase)
FIREBASE_SERVER_KEY=
FIREBASE_PROJECT_ID=

# ============================================
# DATABASE BACKUPS
# ============================================
# Enable automatic backups
ENABLE_AUTO_BACKUP=true
BACKUP_FREQUENCY_HOURS=24

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Debug settings (DO NOT use in production)
DEBUG_AI_PROMPTS=false
DEBUG_SQL_QUERIES=false
MOCK_AI_RESPONSES=false